    "## 3. Data Processing and Legal Context Creation\n",
    "\n",
    "Process the legal texts and create LegalContext objects with cultural and institutional data."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "e7c8a42e",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Initialize text processor\n",
    "text_processor = LegalTextProcessor(\n",
    "    preserve_structure=True,\n",
    "    normalize_unicode=True,\n",
    "    remove_citations=False\n",
    ")\n",
    "\n",
    "# Create legal contexts and meme vectors\n",
    "legal_memes = []\n",
    "\n",
    "for law_id, law_data in ANTICORRUPTION_LAWS.items():\n",
    "    if law_id in SAMPLE_TEXTS:\n",
    "        # Clean and process text\n",
    "        raw_text = SAMPLE_TEXTS[law_id]\n",
    "        processed_text = text_processor.clean_text(raw_text)\n",
    "        \n",
    "        # Create legal context\n",
    "        context = LegalContext(\n",
    "            jurisdiction=law_data['jurisdiction'],\n",
    "            legal_family=law_data['legal_family'],\n",
    "            enactment_date=datetime.fromisoformat(law_data['enactment_date']),\n",
    "            amendment_dates=[\n",
    "                datetime.fromisoformat(date) for date in law_data['amendment_dates']\n",
    "            ],\n",
    "            cultural_indices=law_data['cultural_indices']\n",
    "        )\n",
    "        \n",
    "        # Create legal meme vector\n",
    "        meme = LegalMemeVector(\n",
    "            text=processed_text,\n",
    "            context=context,\n",
    "            text_id=law_id,\n",
    "            metadata={\n",
    "                'name': law_data['name'],\n",
    "                'url': law_data['url'],\n",
    "                'collection_date': datetime.now().isoformat(),\n",
    "                'text_length': len(processed_text),\n",
    "                'word_count': len(processed_text.split())\n",
    "            }\n",
    "        )\n",
    "        \n",
    "        legal_memes.append(meme)\n",
    "        \n",
    "        print(f\"Created legal meme: {law_data['name']} ({law_data['jurisdiction']})\")\n",
    "        print(f\"  - Text length: {len(processed_text):,} characters\")\n",
    "        print(f\"  - Word count: {len(processed_text.split()):,} words\")\n",
    "        print(f\"  - Enactment: {law_data['enactment_date']}\")\n",
    "        print(f\"  - Legal family: {law_data['legal_family']}\")\n",
    "        print()\n",
    "\n",
    "print(f\"Successfully created {len(legal_memes)} legal meme vectors\")"
   ]
