    "# Create summary statistics\n",
    "summary_data = []\n",
    "\n",
    "for meme in legal_memes:\n",
    "    # Calculate readability metrics\n",
    "    readability = text_processor.calculate_readability_metrics(meme.text)\n",
    "    \n",
    "    # Extract key phrases\n",
    "    key_phrases = text_processor.extract_key_phrases(meme.text, max_phrases=5)\n",
    "    \n",
    "    # Calculate complexity score\n",
    "    complexity = text_processor.calculate_complexity_score(meme)\n",
    "    \n",
    "    summary_data.append({\n",
    "        'law_id': meme.text_id,\n",
    "        'jurisdiction': meme.context.jurisdiction,\n",
    "        'legal_family': meme.context.legal_family,\n",
    "        'enactment_year': meme.context.enactment_date.year,\n",
    "        'word_count': readability['word_count'],\n",
    "        'sentence_count': readability['sentence_count'],\n",
    "        'avg_words_per_sentence': readability['avg_words_per_sentence'],\n",
    "        'flesch_reading_ease': readability['flesch_reading_ease'],\n",
    "        'flesch_kincaid_grade': readability['flesch_kincaid_grade'],\n",
    "        'complexity_score': complexity,\n",
    "        'jargon_density': readability['jargon_density'],\n",
    "        'top_phrases': [phrase for phrase, freq in key_phrases],\n",
